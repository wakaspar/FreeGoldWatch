<h1>Pin Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<ul>
  <% @articles.each do |pin| %>
    <li>
      <h3>
        <%= pin.name %>
      </h3>
    </li>
  <% end %>
</ul>
