    </div>

    <!-- SFPD Badge -->
    <div class="four wide column">
      <%= link_to 'http://sfpins.org', target: '_blank' do %>
        <%= image_tag('sfpd_b&w small', class: "sfpd_logo ui centered image") %>
          <button class="ui big secondary labeled icon button">
            <i class="linkify icon" style="color:#ffffff;"></i>
            league.
          </button>
      <% end %>
    </div>
  </div>

</div> <!-- closes Social Box -->

