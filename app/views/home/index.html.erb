<!-- Page Header -->
<header>
  <div class="ui centered row tagline">
    <p>home of the most pinball machines in san francisco</p>
  </div>
  <div class="logo-box">
    <div class="ui text menu">
      <!-- Logos -->
      <div class="header item">
        <a href="#home">
          <h1 class="initials logo">fgw.</h1>
          <h1 class="full-name logo">freegoldwatch.</h1>
        </a>
      </div>
      <!-- Navigation -->
      <div class="right menu">
        <!-- Smells Fishy -->
        <p class="item psa" style="color:#161616;">print. shop. arcade.</p>
        <div class="ui dropdown basic button item">
          <%= fa_icon "bars 3x" %>
          <div class="ui burger menu">
            <a id="pins-link">
              <div class="item">pins.</div>
            </a>
            <div class="ui divider"></div>
            <a id="prints-link">
              <div class="item">prints.</div>
            </a>
            <div class="ui divider"></div>
            <a id="parties-link">
              <div class="item">parties.</div>
            </a>
            <div class="ui divider"></div>
            <a id="social-link">
              <div class="item">social.</div>
            </a>
          </div>
        </div>
      </div> <!-- closes Nav -->
    </div>  <!-- closes 'ui text menu' -->
  </div>  <!-- closes logo-box -->
</header>

<!-- BG Holder One -->
<div id="home" class="bg-holder"></div>

<!-- // Pinball Box // -->
<div id="pins" class="ui section content-box">
  <h1 class="section-header">pinball & video arcade.</h1>
  <br>
  <div class="pin-box">
    <ul class="pin-list">
    <% @pins.each do |pin| %>
      <li> <%= link_to pin['name'], pin['ipdb_link'], target: '_blank' %> </li>
    <% end %>
    </ul>
  </div>
  <br>
  <div class="ui right aligned grid">
    <p class="column box-bottom-text"><%= fa_icon "asterisk" %>all ages welcome.  games updated daily!</p>
  </div>
</div> <!-- closes Pinball Box -->

<!-- BG Holder Two -->
<div id="bg-two" class="bg-holder"></div>

<!-- // Print Order Box // -->
<div id="prints" class= "ui section content-box">
  <h1 class="section-header">custom screen printing.</h1>
  <br>
  <div class="print-order-info">
    <div class="ui center aligned three column stackable grid">
      <div class="column">
        <h2 class="ui icon header">
          <i class="ui circular inverted exchange icon"></i>
          <div class="content">Low minimums / fast turnaround</div>
        </h2>
      </div>
      <div class="column">
        <h2 class="ui icon header">
          <i class="ui circular inverted tint icon"></i>
          <div class="content">Spot color, 4 color process, waterbase inks</div>
        </h2>
      </div>
      <div class="column">
        <h2 class="ui icon header">
          <i class="ui circular inverted tags icon"></i>
          <div class="content"><a href="https://www.alphabroder.com/" target="_blank">Visit our available garmet catalog</a></div>
        </h2>
      </div>
      <div class="row">
        <button class="ui massive secondary button new-print-btn">New Print Order</button>
      </div>
    </div>
  </div> <!-- closes print-order-info -->
  <div class="print-order-form">
    <%= render partial: 'home/new_print' %>
  </div>
  <br>
  <div class="ui right aligned grid">
    <p class="column box-bottom-text"><%= fa_icon "asterisk" %>we specialize in small batches of up to four colors.</p>
  </div>
</div>

<!-- BG Holder Three -->
<div id="bg-three" class="bg-holder"></div>

<!-- // Parties Box // -->
<div id="parties" class= "ui section content-box">

  <h1 class="section-header">party & event hosting.</h1>
  <!-- TODO: SMELLY! -->
  <p style="padding-left:4%;">We happily host public or private functions, including:</p>
  <br>

  <div class="ui center aligned three column stackable grid">
    <div class="column">
      <h2 class="ui icon header">
        <i class="ui circular inverted birthday icon hoverable-i"></i>
        <div class="content">birthday parties</div>
        <div class="sub header">for children & adults</div>
      </h2>
    </div>

    <div class="column">
      <h2 class="ui icon header">
        <i class="ui circular inverted building icon"></i>
        <div class="content">corporate & office parties</div>
      </h2>
    </div>

    <div class="column">
      <h2 class="ui icon header">
        <i class="ui circular inverted tint icon"></i>
        <div class="content">screen printing workshops</div>
      </h2>
    </div>
  </div>

  <div class="ui right aligned grid">
    <p class="column box-bottom-text"><span><a class="party-link" href="tel: 415-876-4444"> <i class="phone icon"></i>call</a></span> / <a class="party-link" href="mailto: info@freegoldwath.com"><i class="envelope icon"></i>email</a> for info & availability.</p>
  </div>
</div>

<!-- BG Holder Four -->
<div id="bg-four" class="bg-holder"></div>

