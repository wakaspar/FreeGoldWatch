<p>home to the most pinball machines in sf!</p>
<div class="container">
  <div class="logo-drop-shadow">
    <h1 class="logo">freegoldwatch</h1>
    <p>print. shop. arcade.</p>
  </div>
</div>


<!-- Shop Info Box -->
<div class="ui stackable grid section ui container">

  <!-- Shop Map -->
  <div class="six wide column">
    <%= link_to 'https://www.google.com/maps/place/Free+Gold+Watch/@37.7682011,-122.4549127,17z/data=!4m5!3m4!1s0x80858751638705a1:0xc5438abd8814e010!8m2!3d37.7682011!4d-122.452724', target: '_blank' do %>
      <%= image_tag('new_map', class: 'shop-map ui image') %>
    <% end %>
  </div>

    <div class="info-box ten wide column">
    <!-- Address -->
    <div class="info">
      <h2 class="ui header"><div class="content"><a class="shop-info" href="https://www.google.com/maps/place/Free+Gold+Watch/@37.7682011,-122.4549127,17z/data=!4m5!3m4!1s0x80858751638705a1:0xc5438abd8814e010!8m2!3d37.7682011!4d-122.452724" target="blank">1767 waller st. sf, ca 94117</a></div></h2>
    </div>
    <!-- Phone -->
    <div class="info">
      <h2 class="ui header"><i class="phone icon"></i><div class="content"><a class="shop-info" href="tel:1-415-876-4444" target="blank">415-876-4444</a></div></h2>
    </div>
    <!-- Email -->
    <div class="info">
      <h2 class="ui header"><i class="envelope icon"></i><div class="content"><a class="shop-info" href="mailto:info@freegoldwatch.com" target="blank">info<span style="font-family:'serif';">@</span>freegoldwatch.com</a></div></h2>
    </div>
  </div>

</div> <!-- closes Shop Info Box -->

<br>

<!-- Pinball Box -->
<div class="ui section">
  <div class="section-header ui">
    <h1>pinball and video arcade</h1>
  </div>

  <div class="pin-box">
    <ul class="pin-list">
    <% @pins.each do |pin| %>
      <li> <%= link_to pin['name'], pin['ipdb_link'], target: '_blank' %> </li>
    <% end %>
    </ul>
  </div>
    <p class="games-updated-daily">all ages welcome.  games updated daily!</p>
  </div>

</div> <!-- closes Pinball Box -->

<br>

<!-- Social Media Box -->
<div class="ui stackable grid container">
  <!-- Instagram Feed -->
  <div class="ten wide column">
    <div class="section-header">
      <h1> <i class="instagram icon"></i> <span style="font-family:'serif';">@</span>freegoldwatch </h1>
    </div>
    <div class="ui tiny images">
      <% @instagram.each do |instagram| %>
      <%= link_to "#{instagram.images.standard_resolution.url}" do %>
      <%= image_tag instagram.images.thumbnail.url, class: "ui image" %>
      <% end %>
      <% end %>
    </div>
  </div>
  <!-- SFPD Badge -->
  <div class="four wide column">
    <%= link_to 'http://sfpins.org', target: '_blank' do %>
    <%= image_tag('sfpd_b&w small', class: "sfpd_logo") %>
    <% end %>
  </div>
  <br>
</div> <!-- closes Social Box -->

<br>

<!-- Print Order Box -->
<div class= "ui section">
  <div class="section-header">
    <h1>custom screen printing</h1>
  </div>
  <div class="print-box">

    <button class="ui button new-print-btn">New Print Order</button>

    <div class="print-info">
      <ul>
        <div class="ui header">
          <%= fa_icon "check 2x" %>
          <div class="content">
            <h5>Low minimums / fast turnaround!</h5>
          </div>
        </div>
        <div class="ui header">
          <%= fa_icon "check 2x" %>
          <div class="content">
            <h5>Spot color, 4 color process, waterbase inks!</h5>
          </div>
        </div>
        <div class="ui header">
          <%= fa_icon "tags 2x" %>
          <div class="content">
            <h5><a href="https://www.alphabroder.com/" target="_blank">available garmet catalog</a></h5>
          </div>
        </div>
      </ul>
    </div>
    <div class="print-form">
      <%= render partial: 'home/new_print' %>
    </div>
  </div>
</div>

