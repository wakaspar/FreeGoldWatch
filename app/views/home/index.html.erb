<!-- Shop Info Box - Large -->
<div class="shop-info-box section">

  <div class="shop-info large-info">
    <!-- Address -->
    <div>
      <%= link_to 'https://www.google.com/maps/place/Free+Gold+Watch/@37.7682011,-122.4549127,17z/data=!4m5!3m4!1s0x80858751638705a1:0xc5438abd8814e010!8m2!3d37.7682011!4d-122.452724', target: '_blank' do %>

        <%= fa_icon "home 4x" %>
        <%= image_tag('address', class: 'responsive-img') %>
      <% end %>
    </div>
    <!-- Phone -->
    <div>
      <%= fa_icon "phone 4x" %>
      <%= image_tag('phone', class: 'responsive-img') %>
    </div>
    <!-- Email -->
    <div>
      <%= fa_icon "envelope 4x" %>
      <%= image_tag('email', class: 'responsive-img') %>
    </div>
  </div>

  <!-- Map that appears on large -->
  <div class="shop-map large-map">
    <%= link_to 'https://www.google.com/maps/place/Free+Gold+Watch/@37.7682011,-122.4549127,17z/data=!4m5!3m4!1s0x80858751638705a1:0xc5438abd8814e010!8m2!3d37.7682011!4d-122.452724', target: '_blank' do %>
    <%= image_tag('map') %>
    <% end %>
  </div>
</div> <!-- closes Shop Info Box - Large -->

<br>

<!-- Pinball Box -->
<div>
  <%= image_tag('pin_title', class: "responsive-img") %> updated daily
  <div class="pin-box section">
    <ul class="pin-list">
    <% @pins.each do |pin| %>
      <li> <%= link_to pin['name'], pin['ipdb_link'], target: '_blank' %> </li>
    <% end %>
    </ul>
    <%= link_to "post high scores", "http://freegoldscores.bitballoon.com", class: "fgs-link right", target: '_blank' %>
  </div>
</div> <!-- closes Pinball Box -->

<br>

<!-- Social Media Box -->
<div class="social-box container">
  <!-- SFPD Badge -->
  <%= link_to 'http://sfpins.org', target: '_blank' do %>
    <%= image_tag('sfpd_b&w small', class: "responsive-img sfpd_logo") %>
  <% end %>
  <!-- Instagram Feed -->
    <h4 class="center"> <%= fa_icon "camera-retro 3x" %> #freegoldwatch</h4>
    <div class="insta-box row container">
    <% @instagram.each do |instagram| %>
      <%= link_to "#{instagram.images.standard_resolution.url}" do %>
        <%= image_tag instagram.images.thumbnail.url, class: "hoverable" %>
      <% end %>
    <% end %>
  </div>
</div> <!-- closes Social Box -->



<!-- Print Order Box -->
<div class= "section">
  <%= image_tag('print_title', class: "responsive-img") %>
  <div class="print-box section">


    <button class="btn btn-large new-print-btn">New Print Order</button>

    <div class="print-info">
      <ul>
        <div>
          <%= fa_icon "check 4x" %>
          <h5>Low minimums / fast turnaround!</h5>
        </div>
        <div>
          <%= fa_icon "check 4x" %>
          <h5>Spot color, 4 color process, waterbase inks!</h5>
        </div>
        <div>
          <%= fa_icon "tags 4x" %>
          <h5><%= link_to "Click here to see our available garmet catalog!", 'https://www.alphabroder.com/', target: '_blank' %></h5>
        </div>
      </ul>
    </div>
    <div class="print-form hide">
      <%= render partial: 'home/new_print' %>
    </div>
  </div>
</div>

<br>
