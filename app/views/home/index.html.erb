<!-- Shop Info Box -->
<div class="section-wrapper">
  <div class="map-box section row">
    <div class="right responsive-img">
      <%= image_tag('map', class: 'shop-map') %>
    </div>
    <div class="col s6 m6">
      <%= image_tag('address', class: "responsive-img left") %>
    </div>
    <div class="col s6 m6">
      <%= image_tag('phone', class: "responsive-img left") %>
    </div>
    <div class="col s6 m6">
      <%= image_tag('email', class: "responsive-img left") %>
      <br>
      <p>TODO: need something to go here!</p>
    </div>
  </div>
</div>


<!-- Pinball Box -->
<div class="section-wrapper">
    <%= image_tag('pin_title', class: "responsive-img") %>
    <div class="pin-box black section">
      <h5>Pinball Lineup Updated Daily!</h5>
      <ul>
        <% @pins.each do |pin| %>
          <li> <%= link_to pin['name'], pin['ipdb_link'] %> </li>
        <% end %>
      </ul>
      <%= link_to "Post High Scores!", "http://freegoldscores.bitballoon.com", class: "fgs-link right" %>
    </div>
  </div>


<!-- Social Media Box -->
<div class="section-wrapper">
  <div class="social-box white section">
    <%= link_to 'http://sfpins.org' do %>
      <%= image_tag('sfpd_b&w small', class: "responsive-img sfpd_logo") %>
    <% end %>
    <div class="container insta-img-row right">
       <h5> <%= fa_icon "instagram 3x" %> #freegoldwatch</h5>
    <% @instagram.each do |instagram| %>
      <%= image_tag instagram.images.standard_resolution.url, class: "insta-img" %>
    <% end %>
    </div>
  </div>
</div>


<!-- Print Order Box -->
<div class="section-wrapper">
  <%= image_tag('print_title', class: "responsive-img") %>
  <div class="print-box black section">
    <h2 class="center">PRINT ORDERS AHOY!</h2>
  </div>
</div>
