      </div>
    </div>

    <!-- SFPD Badge -->
    <div class="four wide column">
      <%= link_to 'http://sfpins.org', target: '_blank' do %>
        <%= image_tag('sfpd_b&w small', class: "sfpd_logo ui centered image") %>
        <p class="box-bottom-text"><%= fa_icon "chain" %> league.</p>
      <% end %>
    </div>
  </div>

</div> <!-- closes Social Box -->

<!-- BG Holder Four -->
<div id="bg-five" class="bg-holder"></div>

